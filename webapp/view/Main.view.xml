<mvc:View controllerName="funcionariocrud.controller.Main"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    height="100%">

   <Page id="page" title="{i18n>title}">
        <content>
            <VBox id="_IDGenVBox" fitContainer="true">
                <smartFilterBar:SmartFilterBar 
                    id="smartFilterBar" 
                    entitySet="FuncionarioSet"
                    basicSearchFieldName="NAME"
                    enableBasicSearch="true" />

                <smartTable:SmartTable 
                    id="LineItemsSmartTable"
                    entitySet="FuncionarioSet"
                    smartFilterId="smartFilterBar"
                    tableType="ResponsiveTable"
                    useVariantManagement="true"
                    useTablePersonalisation="true"
                    header="{i18n>DadosFunc}"
                    showRowCount="true"
                    enableAutoBinding="true"
                    class="sapUiResponsiveContentPadding">

                    <smartTable:customToolbar>
						<OverflowToolbar id="_IDGenOverflowToolbar1">
							<Button id="_IDGenButton2" text="Adicionar" icon="sap-icon://add" press=".onAdd"/>
							<Button id="_IDGenButton3" text="Excluir" icon="sap-icon://delete" press=".onDelete"/>
						</OverflowToolbar>
					</smartTable:customToolbar>


                </smartTable:SmartTable>
            </VBox>
        </content>
    </Page>
</mvc:View>
